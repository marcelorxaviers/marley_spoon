.my-1.px-1.w-full.lg:my-4.lg:px-4{class: "md:w-1/2 lg:w-1/3"}
  %img.block.h-auto.w-full{alt: "Recipe", src: @recipe.image_source_url}
  %article.overflow-hidden.rounded-lg.shadow-lg
    %header.flex.flex-col.justify-between.leading-tight.p-2.md:p-4
      %h1.text-lg
        = @recipe.title
      %p.text-xs.text-grey.mb-4
        = "By #{@recipe.chef_name}"
      %p.text-grey-darkest.mb-6.leading-tight
        = @recipe.description
      %h2.font-sans.font-thin.leading-normal.mb-4
        = "Tags: #{@recipe.tags_string}"
  %br
  %button.bg-gray-400.hover.text-gray-800.font-bold.py-2.px-4.rounded{onclick: "history.back();"} Back